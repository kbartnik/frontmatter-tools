{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": false,
    "types": ["node", "jest", "jest-extended"],
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "include": ["src"]
}